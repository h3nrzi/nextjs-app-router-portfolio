{
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "arrowParens": "always",
  "trailingComma": "none",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "endOfLine": "lf",
  "proseWrap": "always",
  "tabWidth": 2,
  "useTabs": false,
  "singleAttributePerLine": false,
  "jsxSingleQuote": false,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "preserve"
      }
    }
  ]
}
